/* pages/bookShelf/bookShelf.wxss */
.book-shelf{
  width: 100%;
}

.bookList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top:4rem;
}
.book-item{
  width: 30%;
  margin:2% 1.5%;
  display: flex;
  flex-direction: column;
  height: 22ch;
}
.top-operate{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgb(248 ,248 ,255);
}
.topSpan{
  padding:0 1rem;
  color:#1E90FF
}
.book-cover{
  width: 100%;
  height: 15ch;
  background-color: #DCDCDC;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5%;
  position: relative;
}
.shadow{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.3);
  position: absolute;
  z-index:99
}
.sel{
  width: 25%;
  height: 25%;
  background-size: 100% 100%;
  position: absolute;
  right: 1%;
  bottom:1%;
  z-index:999
}
.book-cover-img{
  width: 30%;
  height: 30%;
}

.book-cover-main{
  width: 100%;
  height: 100%;
  border-radius: 5%;
}

.book-name{
  margin-top:.2rem;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}

.addBook{
  width: 100%;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: fixed;
  top:0;
  z-index:9999;
  background-color: rgb(248 ,248 ,255);
}
.btn{
  width: 30%;
  height: 2rem;
  border-radius: 2rem 0 0 2rem;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to right,rgb(135,206,250,0.5),#1E90FF);
  color: white;
}


/* 未登录 */
.unLogin{
  width: 100%;
  height: 100%;
  position: fixed;
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-info{
  margin-top:20%;
  width: 5rem;
  height: 5rem;
}
.header{
  width: 100%;
  height: 100%;
  background-size: 100%;
}
.login-btn{
  height: 2rem;
  background: linear-gradient(to right,rgba(135,206,250,0.5) , #1E90FF); 
  border-radius: 2rem;
  margin-top:30%;
  color:#ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: .8rem;
}

.noBook-style{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: -1;
}
.bottom{
  position: fixed;
  bottom:0;
  background-color: rgba(248 ,248 ,255,.5);
  width: 100%;
  height: 4rem;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99999;
}
.delBtn{
  width: 15rem;
  height: 2.5rem;
  border-radius: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
}
