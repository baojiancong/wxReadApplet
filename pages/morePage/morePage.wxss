/* pages/morePage/morePage.wxss */
.book-list{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.book-item{
  width: 100%;
  height: 7rem;
  display: flex;
}
.book-cover{
  width:25%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.book-img{
  width: 80%;
  height: 6rem;
  background-color: antiquewhite;
  border-radius: 5px;
}
.book-info{
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.book-name{
  font-weight: bold;
}
.book-intro{
  font-size: 0.8rem;
  white-space: nowrap;
  text-overflow: ellipsis;  
  overflow: hidden;
}
.book-detail{
  font-size: 0.8rem;
}
.tip{
  text-align: center;
  padding:1rem;
}

.noRequest{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}
