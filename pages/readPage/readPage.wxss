/* pages/readPage/readPage.wxss */
.container{
  width: 100%;
  height:100vh;
  padding: 0;
}
.top{
  width: 100%;
  display: flex;
  align-items: center;
  height: 3rem;
}
.title{
  font-weight: bold;
  margin-left:.5rem;
}
.body{
  width: 90%;
  margin:0 5%;
}
.paragraph{
  text-indent: 2em;
  display: block;
  margin:.3rem 0;
}

.setting{
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 5rem;
  display: flex;
  align-items: center;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
}
.box{
  display: flex;
  width: 100%;
  /* justify-content: space-evenly; */
}
.item{
  width: 25% !important;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0;
  padding: 0;
  border:none;
  font-weight: 500;
  font-size: 1rem;
  background-color: white;
  border-radius: none;
}
button::after {
  border: none;
}
image{
  width: 2rem;
  height: 2rem;
}

span{
  padding: 0 1rem;
}

/* 字体控制 */
.font-controll{
  position: fixed;
  bottom:0;
  width: 100%;
  height: 3rem;
  background-color: white;
  box-shadow: inset 0 -3em 3em rgba(0,0,0,0.1);
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.font-style{
  width: 3rem;
  height: 1.5rem;
  background-color: white;
  border:1px solid #cccccc;
  text-align: center;
  border-radius: 5px;
}


/* 目录 */

.catalog{
  position: fixed;
  left:0;
  top:0;
  width: 80%;
  height: 100%;
  background-color: #ffffff;
  scroll-behavior: auto;
}
.top-info{
  display: flex;
  background-color: rgba(0,0,0,0.1);
  justify-content: space-between;
  width: 100%;
  height: 2.5rem;
  align-items: center;
}

.catalog-item{
  width: 100%;
  height: 2.5rem;
  border-bottom: 1px solid #cccccc;
  display: flex;
  align-items: center;
}

.pre{
  width: 25%;
  height: 2rem;
  border: 1px solid blue;
  background-color: white;
  color: blue;
  border-radius: 5px;
  margin: 5% 0 0 5%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.next{
  width: 25%;
  height: 2rem;
  border: 1px solid blue;
  background-color: white;
  color: blue;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 5% 0  5% 70%;
}
