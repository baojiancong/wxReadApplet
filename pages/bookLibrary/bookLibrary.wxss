/* pages/bookLibrary/bookLibrary.wxss */
.bookLibrary{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 顶部轮播图 */
.top-carousel-map{
  margin-top:1rem;
  width: 100%;
  display: flex;
  justify-content: center;
  
}
.carousel-map{
  width: 90%;
  height: 8rem;
  box-shadow: 2px 10px 10px 2px rgba(0,0,0,.2);
}
.carousel-map-img{
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
}
/* 图书推荐板块 */
.book-recommend{
  width: 90%;
  margin-top:1rem;
  border-radius: 5px;
  background-color: white;
  box-shadow: 2px 2px 2px 1px #cccccc;
}
.book-recommend-head{
  margin-top:.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.book-recommend-title{
    font-weight: bold;
    margin-left:.5rem;
}
.book-recommend-more{
    margin-right: .5rem;
    font-size: 0.8rem;
    display: flex;
    align-items: center;
}
.book-recommend-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  min-height: 12rem;
  position: relative;
}

.book-item{
   width: 20%;
   margin: .5rem;
}
.book-cover{
  width: 100%;
  height: 6rem;
  background-color: beige;
  border-radius: 5px;
}
.book-name{
  font-size: 0.8rem;
  margin-top: .2rem;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 图书排行 */
.book-rank{
  width: 90%;
  margin-top:1rem;
  border-radius: 5px;
  background-color: white;
  box-shadow: 2px 2px 2px 1px #cccccc;
  margin-bottom:1rem;
}
.book-rank-head{
  margin-top:.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.book-rank-title{
  font-weight: bold;
  margin-left:.5rem;
}
.book-rank-more{
  margin-right: .5rem;
  font-size: 0.8rem;
  display: flex;
  align-items: center;
}
.book-rank-list{
  display: flex;
  flex-direction: column;
  min-height: 15rem;
  position: relative;
}
.book-rank-item{
  width: 100%;
  height: 7rem;
  display: flex;
}
.book-rank-cover{
  width:30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.book-rank-img{
  width: 4.8rem;
  height: 6rem;
  background-color: beige;
  border-radius: 5px;
}
.book-rank-info{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.book-rank-name{
  font-weight: bold;
  font-size: 1rem;
}
.book-rank-intro{
  font-size: 0.8rem;
  white-space: nowrap;    /*规定文本不换行**/
  text-overflow: ellipsis;  /**显示省略符号来代表被修剪的文本。*/
  overflow: hidden;
}
.book-rank-detail{
  font-size: 0.8rem;
}


.noRequest{
  position: absolute;
  top:50%;
  left:50%;
  transform: translateX(-50%);
  font-size: 1;
}