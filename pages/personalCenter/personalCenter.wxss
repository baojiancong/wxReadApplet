/* pages/personalCenter/personalCenter.wxss */
.unLogin{
  width: 100%;
  height: 100%;
  position: fixed;
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-info{
  margin-top:20%;
  width: 5rem;
  height: 5rem;
}
.header{
  width: 100%;
  height: 100%;
  background-size: 100%;
}
.login-btn{
  height: 2rem;
  background: linear-gradient(to right,rgba(135,206,250,0.5) , #1E90FF); 
  border-radius: 2rem;
  margin-top:30%;
  color:#ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: .8rem;
}

/* 授权弹窗 */
.wx-pop-shadow{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.pop-container{
  width: 80%;
  height: 15rem;
  background-color: #ffffff;
  border-radius: 1rem;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.pop-title{
  font-weight: bold;
  text-align: center;
}
.pop-content{
  text-align: center;
}
.pop-operate{
  display: flex;
  justify-content: center;
}
.quxiao{
  width: 7rem !important;
}
.yunxu{
  width: 7rem !important; 
}

/* 用户授权登陆后样式 */
.main{
  display: flex;
  flex-direction: column;
}
.main-user-info{
  width: 100%;
  height: 6rem;
  background-color: #1E90FF;
}
.header-pic{
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
}
.box1{
  width: 40%;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin:.5rem 0 0 1rem;
  color: white;
}
.user-bar{
  width: 100%;
}
.my-item{
  width: 100%;
  height: 3rem;
  position: relative;
  display: flex;
  flex-direction: column;
}
.line{
  width: 90%;
  height: 1px;
  background-color: #cccccc;
  opacity: 0.8;
  margin-left:5%;
}
.my-item-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 1;
}
.my-item-name{
  margin-left:5%;
  font-size: .8rem;
}
.weui-icon-arrow{
  margin-right:5%;
}


